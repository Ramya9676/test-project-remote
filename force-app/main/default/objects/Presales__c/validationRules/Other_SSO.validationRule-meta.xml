<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Other_SSO</fullName>
    <active>true</active>
    <description>Mandate &quot;Other SSO&quot; field when SSO is selected as &quot;Other&quot;.</description>
    <errorConditionFormula>ISPICKVAL(  SSO__c  , &quot;Other&quot;) &amp;&amp;  
ISBLANK(  Other_SSO__c   )</errorConditionFormula>
    <errorDisplayField>Other_SSO__c</errorDisplayField>
    <errorMessage>Please enter &quot;Other SSO&quot; since the SSO is selected as &quot;Other&quot;.</errorMessage>
</ValidationRule>
