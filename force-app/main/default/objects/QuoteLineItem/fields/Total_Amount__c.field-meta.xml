<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total_Amount__c</fullName>
    <description>Quantity*Sale Price*number of months</description>
    <formula>if( OR(of_Months__c =0,ISBLANK(of_Months__c)) ,  Quantity* UnitPrice  ,  Quantity* UnitPrice*of_Months__c)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Quantity*Sale Price*number of months</inlineHelpText>
    <label>Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
